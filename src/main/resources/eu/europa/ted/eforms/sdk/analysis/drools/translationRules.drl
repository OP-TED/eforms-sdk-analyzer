package eu.europa.ted.eforms.sdk.analysis.drools;

unit SdkUnit;

rule "Label texts do not contain invalid characters"
when
  /labels[ $l: this, $language: language, $invalidCharacters: invalidCharacters, invalidCharacters.empty == false ]
then
  results.add(new ValidationResult($l, "Label in " + $language + " contains invalid characters: " + $invalidCharacters, ValidationStatusEnum.ERROR));
end
